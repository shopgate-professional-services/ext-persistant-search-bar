{
  "version": "1.2.5",
  "id": "@shopgate-project/persistent-search-bar",
  "components": [
    {
      "type": "portals",
      "target": "app-bar.below.before",
      "path": "frontend/portals/AppBarBelowBefore",
      "id": "SearchField"
    },
    {
      "type": "portals",
      "target": "app-bar.right",
      "path": "frontend/portals/AppBarRight",
      "id": "AppBarRight"
    },
    {
      "type": "translations",
      "path": "frontend/locale/en-US.json",
      "id": "locale/en-US"
    },
    {
      "type": "translations",
      "path": "frontend/locale/de-DE.json",
      "id": "locale/de-DE"
    }
  ],
  "configuration": {
    "searchBarBlacklist": {
      "type": "admin",
      "destination": "frontend",
      "default": [
        "/browse",
        "/cart",
        "/filter",
        "/login",
        "/checkout",
        "/item/:productId/gallery/:slide",
        "/search",
        "/scanner"
      ],
      "params": {
        "type": "json",
        "label": "Path values for blacklisting"
      }
    },
    "bgColor": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "type": "textarea",
        "label": "Background color of the list"
      }
    },
    "textColor": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "type": "textarea",
        "label": "Text color of the list"
      }
    }
  }
}